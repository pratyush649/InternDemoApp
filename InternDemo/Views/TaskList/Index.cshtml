        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Projects</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="tablemanager">
                                    <thead>
                                        <tr>

                                            <th>Task Name</th>
                                            <th>Status</th>
                                            <th>Priority</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th class="disableFilterBy">Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>   @Html.DisplayFor(modelItem => item.TaskName)</td>
                                            <td>   @Html.DisplayFor(modelItem => item.TaskStatus)</td>
                                            <td>  @Html.DisplayFor(modelItem => item.Priority)</td>
                                            <td>  @Html.DisplayFor(modelItem => item.StartDate)</td>
                                            <td>  @Html.DisplayFor(modelItem => item.EndDate)</td>
                                            <td>
                                                <a asp-action="Edit" class="btn btn-success btn-sm rounded-0" asp-route-id="@item.TaskListId">Edit</a>
                                                <a asp-action="Delete" class="btn btn-danger btn-sm rounded-0" asp-route-id="@item.TaskListId">Delete</a>
                                            </td>

                                        </tr>
                                        }

