@model InternDemo.Models.EmployeeRoles

@{
      ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Assign Employee Role</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>

                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Id" class="control-label">Employee Name</label>
                            <select asp-for="Id" class="form-control" asp-items=@(ViewBag.Id)><option style="display:none"> -- select an option -- </option></select>
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <!-- /.form-group -->
                        <div class="form-group">
                            <label asp-for="RoleId" class="control-label">Role</label>
                            <select asp-for="RoleId" class="form-control" asp-items=@(ViewBag.RoleType)><option style="display:none"> -- select an option -- </option></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
            <!-- /.row -->
        </div>

    </div>

